rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper to check if user is admin
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.email == 'gangwalparul19@gmail.com' || 
        request.auth.token.email == 'tarotsun555666@gmail.com' ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    // User profiles
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    // Readings (Private history)
    match /readings/{readingId} {
      // Allow users to create readings where they are the owner
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow users to read/update/delete their own readings
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Bookings
    match /bookings/{bookingId} {
      // Allow authenticated users to create bookings
      allow create: if isAdmin() || (isAuthenticated() && request.resource.data.userId == request.auth.uid);
      // Users can read their own bookings
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      // Admins can update/delete
      allow update, delete: if isAdmin();
    }

    // Reviews (Public)
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(request.resource.data.userId) || isAdmin();
    }

    // Services (Pricing & Configuration)
    match /services/{serviceId} {
      allow read: if true; // Public pricing
      allow write: if isAdmin();
    }

    // Availability (Blocked dates)
    match /availability/{docId} {
      allow read: if true; // Needed for booking page to see blocked dates
      allow write: if isAdmin();
    }

    // Public Taken Slots (For availability checking without exposing private details)
    match /taken_slots/{slotId} {
      allow read: if true;
      allow create: if isAuthenticated(); // Allow users to reserve a slot
      allow update, delete: if isAdmin(); // Only admin can clear slots (or cancellation logic)
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false; 
    }
  }
}
